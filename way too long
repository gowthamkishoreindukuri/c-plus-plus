#include <iostream>
using namespace std;
 
int main() {
    int n;
    string inp;
    cin >> n;
    while (n > 0){
        cin >> inp;
        if (inp.length() > 10){
            cout << inp[0] << inp.length()-2 << inp[inp.length()-1] << endl;
        }
        else{
            cout << inp << endl;
        }
        n = n - 1;
    }
	return 0;
}
