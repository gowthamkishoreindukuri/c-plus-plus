#include <iostream>
#include <cmath>
using namespace std;
 
int main() {
    int e,o;
    cin >> e >> o;
    if (e == o || e == o + 1 || e + 1== o){
        if (e == 0 && o == 0){
            cout << "NO";
        }
        else{
            cout << "YES";
        }
    }
    else{
        cout << "NO";
    }
	return 0;
}
